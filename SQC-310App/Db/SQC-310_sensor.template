# SQC-310 Sensor $(R)

# Macros:
# % macro, name, Device name
# % macro, P, Device Prefix
# % macro, R, Device Prefix
# % macro, PORT, Asyn Port name

record (ai, "$(P):$(R):Rate_RBV")
{
    field (DTYP, "stream")
    field(SDIS, "$(P):Disable")
    field (INP,  "@SQC-310.proto get_rate($(R)) $(PORT)")
    field (EGU, "Ang/s")
    field (SCAN, "1 second")
    field(PREC, "2")
}

