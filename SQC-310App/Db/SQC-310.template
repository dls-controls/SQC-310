# Run State

record(stringin, "$(P):RunState") {
    field(DTYP, "stream")
    field(SDIS, "$(P):Disable")
    field(INP, "@SQC-310.proto get_run_state $(PORT)")
    field(PINI, "YES")
    field(SCAN, "1 second")
}

record (bo, "$(P):StartProcess")
{
    field (DTYP, "stream")
    field (OUT,  "@SQC-310.proto start_process $(PORT)")
}

record (bo, "$(P):ResetProcess")
{
    field (DTYP, "stream")
    field (OUT,  "@SQC-310.proto reset_process $(PORT)")
}

record (bo, "$(P):ZeroThickness")
{
    field (DTYP, "stream")
    field (OUT,  "@SQC-310.proto zero_thickness $(PORT)")
}

record (bo, "$(P):ZeroTime")
{
    field (DTYP, "stream")
    field (OUT,  "@SQC-310.proto zero_time $(PORT)")
}

record (ai, "$(P):_starttime")
{
    field (DTYP, "Soft Timestamp")
    field (TSEL, "$(P):Zero.TIME")
}

record (ai, "$(P):_currtime")
{
    field (DTYP, "Soft Timestamp")
    field (TSEL, "$(P):Thickness.TIME")
}


record (calc, "$(P):Runtime")
{
    field (EGU, "s")
    field (INPA, "$(P):_starttime PP MS")
    field (INPB, "$(P):_currtime PP MS")
    field (CALC, "B-A")
}

record (calc, "$(P):MeanRate")
{
    field (EGU, "Ang/s")
    field (INPA, "$(P):Thickness")
    field (INPB, "$(P):Runtime PP MS")
    field (CALC, "1000*A/B")
}

