# Disable Polling
record(bo, "$(P):Disable") {
    field(DESC, "Disable polling")
    field(PINI, "YES")
    field(VAL, "1")
    field(OMSL, "supervisory")
    field(ZNAM, "Enabled")
    field(ONAM, "Disabled")
}

record(stringin, "$(P):DeviceName") {
    field(DTYP, "stream")
    field(SDIS, "$(P):Disable")
    field(INP, "@SQC-310.proto get_device_name $(PORT)")
    field(PINI, "YES")
    field(SCAN, "10 second")
}

record (ai, "$(P):Frequency")
{
    field (DTYP, "stream")
    field(SDIS, "$(P):Disable")
    field (INP,  "@SQC-310.proto get_frequency1 $(PORT)")
    field (EGU, "Hz")
    field (SCAN, "1 second")
}

record (ai, "$(P):Shutter_RBV")
{
    field (DTYP, "stream")
    field(SDIS, "$(P):Disable")
    field (INP,  "@SQC-310.proto get_shutter $(PORT)")
    field (SCAN, "1 second")
}

